-- 创建实例的工具函数
local function createInstance(class, properties)
    local instance = Instance.new(class)
    for key, value in pairs(properties) do
        instance[key] = value
    end
    return instance
end

-- 创建主界面
local UI = createInstance("ScreenGui", {
    Parent = game.CoreGui,
    DisplayOrder = 999,
    ResetOnSpawn = false
})

